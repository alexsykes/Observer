<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexsykes.scoremonster">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.TimeSheetActivity"
            android:label="@string/timesheet"
            android:parentActivityName=".activities.TimerActivity" />

        <activity
            android:name=".activities.TimerActivity"
            android:label="Timer"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />

        <activity
            android:name=".activities.SummaryScoreActivity"
            android:label="Leaderboard"
            android:parentActivityName=".activities.MainActivity" />

        <activity
            android:name=".activities.SummaryActivity"
            android:label="Leaderboard"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.SyncActivity"
            android:label="Upload Scores"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.ScoreListActivity"
            android:label="Score list"
            android:parentActivityName=".activities.MainActivity" />
        <activity
            android:name=".activities.SetupActivity"
            android:label="Set up"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>