<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.alexsykes.observer"
    android:versionCode="1"
    android:versionName="1.0.0">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity
            android:name="com.alexsykes.observer.activities.TimeSheetActivity"
            android:label="@string/timesheet"
            android:parentActivityName="com.alexsykes.observer.activities.TimerActivity" />
        <activity
            android:name="com.alexsykes.observer.activities.TimerActivity"
            android:label="Timer"
            android:parentActivityName="com.alexsykes.observer.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.alexsykes.observer.activities.SummaryScoreActivity"
            android:label="Leaderboard"
            android:parentActivityName="com.alexsykes.observer.activities.MainActivity" />
        <activity
            android:name="com.alexsykes.observer.activities.SyncActivity"
            android:label="Upload Scores"
            android:parentActivityName="com.alexsykes.observer.activities.MainActivity" />
        <activity
            android:name="com.alexsykes.observer.activities.ScoreListActivity"
            android:label="Score list"
            android:parentActivityName="com.alexsykes.observer.activities.MainActivity" />
        <activity
            android:name="com.alexsykes.observer.activities.SetupActivity"
            android:label="Set up"
            android:parentActivityName="com.alexsykes.observer.activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.alexsykes.observer.activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>